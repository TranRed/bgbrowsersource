<UserControl x:Class="BGOverlayUpdater.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BGOverlayUpdater"                            
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" >

    <StackPanel x:Name="panel" HorizontalAlignment="Left">
        <DockPanel Margin="10">
            <Label Content=".js File Location:" FontSize="16"></Label>
            <TextBox Name="jsFileLocation" Text="Label 1" FontSize="16"  VerticalAlignment="Center"  Width="500" TextWrapping="Wrap" IsReadOnly="True"></TextBox>
            <Button Name="btnOpenFile" Click="fileDialogClicked">Choose file</Button>
        </DockPanel>
        <DockPanel Margin="10">
            <Button Name="btnReset" Width="100" Click="resetClicked">reset session</Button>
        </DockPanel>
    </StackPanel>

</UserControl>